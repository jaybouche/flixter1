<br />

<div class="booyah-box col-10 offset-1">
   <h1 class="text-center"><%= current_course.title %></h1>
     <%= image_tag current_course.image.to_s, class: 'img-fluid' %>
  <br />
  <%= link_to 'Preview As Student...', course_path(current_course), class: 'btn btn-warning float-right' %>
  <br class="clr" />
<div class="text-center">
 <%= link_to 'Add a new section...', instructor_course_sections_path(current_course), class: 'btn btn-primary btn-lg' %>
</div>
  <br />

<ul>
   <% current_course.sections.each do |section| %>
    <li>
      <%= section.title %>
      <%= link_to 'New Lesson', instructor_course_sections_path(current_course), class: 'float-right btn btn-primary btn-sm'%>

<ul>
  <% section.lessons.rank(:row_order).each do |lesson| %>
    <li>
      <b><%= lesson.title %></b>
        -
      <%= lesson.subtitle %>
    </li>
  <% end %>
</ul>
      <br class="clr" />
    </li>
  <% end %>
</ul>

<div class="row">  
 <div class="col-sm-4 col-12 text-center">
  <span class="badge badge-default">	
  <%= number_to_currency @course.cost %>
  </span>

  <% if current_user && current_user == @course.user %>
    <br />
    <br />
    <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large' %>
  <% end %>

    <br />
    <br />
   <% if current_user %>
   <% if current_user.enrolled_in?(@course) %>
    <h3 class="badge badge-info">You Are Enrolled!</h3>
  <% else %>
    <% if @course.free? %>
      <%= link_to 'Enroll', course_enrollments_path(@course), class: 'btn btn-primary', method: :post %>
    <% else %>
      <%= form_tag course_enrollments_path(@course) do %>
        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-email="<%= current_user.email %>"
                data-description="<%= @course.title %> (<%= number_to_currency @course.cost %>)"
                data-amount="<%= (@course.cost * 100).to_i %>"
                data-locale="auto"></script>
      <% end %>
  <% end %>
      <% end %>
  <% else %>
    <h3 class="badge badge-info">Sign In to Enroll!</h3>
</div>

<div class="col-sm-8 col-12">
  <% @course.sections.each do |section| %>
  <br /><br />
<div class="section">
  <h3>
  <%= section.title %>
  </h3>
<div class="row">  
  <% section.lessons.rank(:row_order).each do |lesson| %>
<div class="col-12 col-sm-6"> 
<div class="lesson text-center">
  <br />
  <%= link_to lesson_path(lesson) do %>
    <b><%= lesson.title %></b>
    <br />
    <%= lesson.subtitle %>
  <% end %>
</div>
</div>
  <% end %>
</div>
  <br class="clr" />
  <% end %>
</div>

</div>
<% end %>
